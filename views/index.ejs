<script>
(function() {
  'use strict';

  function reactComponentsRendered() {
    return !document.querySelector('.app-wrapper .loading');
  }

  function linkHtml(text, href, target) {
    target = target || "_self";

    var style = "text-decoration:underline;color:blue;";
    var link = "<a href=\"%href%\" target=\"%target%\" " +
      "style=\"%style%\">%text%</a>";

    return link.replace("%href%", href).replace("%target%", target).replace("%style%", style).replace("%text%", text);
  }

  function showLoadErrorHelp() {
    var reactRoot = document.querySelector('#reactRoot');

    reactRoot.innerHTML = '<div class="main-content">' +
    '<p>I\'m sorry that your content is taking a while ' +
    'to load. If it doesn\'t appear soon, ' +
    'try ' + linkHtml('reloading the page', '/') +
    '. You can also ' + linkHtml('send me a bug report',
      'https://github.com/codyromano/habit-tracker/issues/new', '_blank') +
    '.</div>';
  }

  setTimeout(function() {
    if (!reactComponentsRendered()) {
      showLoadErrorHelp();
    }
  }, 6000);

})();
</script>

